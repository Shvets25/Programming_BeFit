@model BeFit.Models.TrainingSession

@{
    ViewData["Title"] = "Training Session Details";
}

<h1>Training Session Details</h1>
<hr />

<div class="card p-4 shadow-sm">

    <dl class="row mb-0">

        <!-- Start Time -->
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <!-- End Time -->
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.EndTime)
        </dd>

        <!-- Notes -->
        <dt class="col-sm-3 fw-bold">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Notes)
        </dd>

    </dl>

</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>